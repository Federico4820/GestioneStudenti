@model IEnumerable<GestioneStudenti.ViewModels.StudenteViewModel>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome Completo</th>
            <th>Data di Nascita</th>
            <th>Email</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var studente in Model)
        {
            <tr>
                <td>@studente.NomeCompleto</td>
                <td>@studente.DataDiNascita</td>
                <td>@studente.Email</td>
                <td>
                    <button class="btn btn-warning" onclick="showUpdateForm('@studente.Id')">Modifica</button>
                    <button class="btn btn-danger" onclick="deleteStudente('@studente.Id')">Elimina</button>
                </td>
            </tr>
        }
    </tbody>
</table>
